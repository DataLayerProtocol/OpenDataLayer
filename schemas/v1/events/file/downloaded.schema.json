{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/file/downloaded.schema.json",
  "title": "File Downloaded",
  "description": "Fired when a user downloads a file.",
  "type": "object",
  "properties": {
    "fileId": {
      "type": "string",
      "description": "Unique identifier for the file."
    },
    "fileName": {
      "type": "string",
      "description": "Name of the downloaded file."
    },
    "fileType": {
      "type": "string",
      "description": "Type or extension of the file."
    },
    "fileSize": {
      "type": "integer",
      "minimum": 0,
      "description": "File size in bytes."
    },
    "source": {
      "type": "string",
      "description": "Location or context from which the file was downloaded."
    },
    "downloadMethod": {
      "type": "string",
      "enum": ["direct", "api", "bulk", "export", "other"],
      "description": "The method used to download the file."
    }
  },
  "required": ["fileId"],
  "additionalProperties": false
}
