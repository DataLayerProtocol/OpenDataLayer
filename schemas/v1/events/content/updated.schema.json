{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/content/updated.schema.json",
  "title": "Content Updated",
  "description": "Fires when an existing piece of content is updated.",
  "type": "object",
  "properties": {
    "contentId": {
      "type": "string",
      "description": "The unique identifier of the content updated."
    },
    "contentType": {
      "type": "string",
      "description": "The type of content updated."
    },
    "title": {
      "type": "string",
      "description": "The title of the content."
    },
    "updatedFields": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "The list of fields that were updated."
    },
    "version": {
      "type": "integer",
      "description": "The version number after the update."
    }
  },
  "required": ["contentId"],
  "additionalProperties": false
}
