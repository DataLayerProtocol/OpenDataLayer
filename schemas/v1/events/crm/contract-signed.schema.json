{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/crm/contract-signed.schema.json",
  "title": "CRM Contract Signed",
  "description": "Fires when a contract is signed by the customer.",
  "type": "object",
  "properties": {
    "contractId": {
      "type": "string",
      "description": "Unique identifier for the contract."
    },
    "opportunityId": {
      "type": "string",
      "description": "Unique identifier for the associated opportunity."
    },
    "value": {
      "type": "number",
      "description": "Signed contract value."
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "ISO 4217 3-letter currency code (e.g. USD, EUR, GBP)."
    },
    "signedAt": {
      "type": "string",
      "description": "Date and time the contract was signed."
    },
    "termLength": {
      "type": "integer",
      "description": "Contract term in months."
    }
  },
  "required": ["contractId", "value"],
  "additionalProperties": false
}
