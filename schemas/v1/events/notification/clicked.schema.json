{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/notification/clicked.schema.json",
  "title": "Notification Clicked",
  "description": "Fires when a user clicks an action within a notification",
  "type": "object",
  "properties": {
    "notificationId": {
      "type": "string"
    },
    "channel": {
      "type": "string"
    },
    "actionId": {
      "type": "string"
    },
    "actionUrl": {
      "type": "string"
    },
    "campaignId": {
      "type": "string"
    }
  },
  "required": ["notificationId", "channel"],
  "additionalProperties": false
}
