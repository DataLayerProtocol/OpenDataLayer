{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/notification/permission-requested.schema.json",
  "title": "Notification Permission Requested",
  "description": "Fires when the application requests notification permission from a user",
  "type": "object",
  "properties": {
    "channel": {
      "type": "string"
    },
    "trigger": {
      "type": "string",
      "enum": ["app_start", "contextual", "settings"]
    }
  },
  "required": ["channel"],
  "additionalProperties": false
}
