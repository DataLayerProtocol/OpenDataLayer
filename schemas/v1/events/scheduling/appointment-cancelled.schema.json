{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/scheduling/appointment-cancelled.schema.json",
  "title": "Scheduling Appointment Cancelled",
  "description": "Fires when a scheduled appointment is cancelled.",
  "type": "object",
  "properties": {
    "appointmentId": {
      "type": "string",
      "description": "Unique identifier for the appointment."
    },
    "reason": {
      "type": "string",
      "description": "Reason provided for the cancellation."
    },
    "cancelledBy": {
      "type": "string",
      "description": "Who initiated the cancellation.",
      "enum": ["user", "provider", "system"]
    },
    "cancellationNotice": {
      "type": "number",
      "description": "Hours of notice before appointment."
    }
  },
  "required": ["appointmentId"],
  "additionalProperties": false
}
