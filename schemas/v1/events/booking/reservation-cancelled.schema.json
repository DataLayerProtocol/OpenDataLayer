{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/booking/reservation_cancelled.schema.json",
  "title": "Booking Reservation Cancelled",
  "description": "Fired when a reservation is cancelled.",
  "type": "object",
  "properties": {
    "reservationId": {
      "type": "string",
      "description": "Unique identifier for the reservation."
    },
    "reason": {
      "type": "string",
      "enum": ["plans_changed", "found_better", "price", "weather", "illness", "work", "other"],
      "description": "The reason for cancellation."
    },
    "cancellationFee": {
      "type": "number",
      "description": "Fee charged for the cancellation."
    },
    "refundAmount": {
      "type": "number",
      "description": "Amount refunded to the customer."
    },
    "currency": {
      "type": "string",
      "description": "Currency code for monetary amounts."
    },
    "cancelledBy": {
      "type": "string",
      "enum": ["customer", "provider", "system"],
      "description": "The party that initiated the cancellation."
    }
  },
  "required": ["reservationId"],
  "additionalProperties": false
}
