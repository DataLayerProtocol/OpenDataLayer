{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/integration/deployment_started.schema.json",
  "title": "Deployment Started",
  "description": "Fired when a code deployment is initiated.",
  "type": "object",
  "properties": {
    "deploymentId": {
      "type": "string",
      "description": "Unique identifier for the deployment."
    },
    "environment": {
      "type": "string",
      "enum": ["production", "staging", "preview", "development", "test"],
      "description": "The target deployment environment."
    },
    "commitSha": {
      "type": "string",
      "description": "The Git commit SHA being deployed."
    },
    "branch": {
      "type": "string",
      "description": "The Git branch being deployed."
    },
    "version": {
      "type": "string",
      "description": "The version identifier for the deployment."
    },
    "initiatedBy": {
      "type": "string",
      "enum": ["user", "ci", "rollback", "schedule"],
      "description": "How the deployment was initiated."
    },
    "provider": {
      "type": "string",
      "description": "The deployment provider (e.g. 'vercel', 'netlify', 'aws', 'heroku')."
    },
    "projectId": {
      "type": "string",
      "description": "The project identifier associated with the deployment."
    }
  },
  "required": ["deploymentId", "environment"],
  "additionalProperties": false
}
