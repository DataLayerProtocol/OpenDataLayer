{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/video_call/recording_stopped.schema.json",
  "title": "Video Call Recording Stopped",
  "description": "Fired when call recording is stopped.",
  "type": "object",
  "properties": {
    "callId": {
      "type": "string",
      "description": "The unique identifier of the video call."
    },
    "recordingId": {
      "type": "string",
      "description": "The unique identifier of the recording."
    },
    "duration": {
      "type": "number",
      "minimum": 0,
      "description": "Recording duration in seconds."
    },
    "stoppedBy": {
      "type": "string",
      "enum": ["host", "system", "participant"],
      "description": "The entity that stopped the recording."
    },
    "fileSize": {
      "type": "integer",
      "minimum": 0,
      "description": "Recording file size in bytes."
    }
  },
  "required": ["callId", "recordingId"],
  "additionalProperties": false
}
