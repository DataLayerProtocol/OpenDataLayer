{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/events/media/play.schema.json",
  "title": "Media Play",
  "description": "Fired when media playback begins or resumes.",
  "type": "object",
  "properties": {
    "media": {
      "$ref": "media-object.schema.json#/$defs/media",
      "description": "The media item being played."
    },
    "position": {
      "type": "number",
      "minimum": 0,
      "description": "Playback position in seconds when play was triggered."
    }
  },
  "required": ["media"],
  "additionalProperties": false
}
