{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/context/loyalty.schema.json",
  "title": "Loyalty Context",
  "description": "Represents the user's loyalty program state.",
  "type": "object",
  "properties": {
    "programId": {
      "type": "string",
      "description": "Loyalty program identifier."
    },
    "programName": {
      "type": "string",
      "description": "Loyalty program name."
    },
    "memberId": {
      "type": "string",
      "description": "Loyalty member identifier."
    },
    "tier": {
      "type": "string",
      "description": "Current loyalty tier."
    },
    "pointsBalance": {
      "type": "integer",
      "minimum": 0,
      "description": "Current points balance."
    },
    "lifetimePoints": {
      "type": "integer",
      "minimum": 0,
      "description": "Total points earned over all time."
    },
    "tierExpiresAt": {
      "type": "string",
      "description": "ISO 8601 date when current tier expires."
    },
    "memberSince": {
      "type": "string",
      "description": "ISO 8601 date when member joined."
    }
  },
  "additionalProperties": false
}
