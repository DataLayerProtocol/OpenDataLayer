{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/context/device.schema.json",
  "title": "Device Context",
  "description": "Describes the device, browser, and hardware capabilities used to access the application.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["desktop", "mobile", "tablet", "tv", "wearable", "bot", "other"],
      "description": "The device form factor."
    },
    "os": {
      "type": "object",
      "description": "The operating system running on the device.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The operating system name (e.g. Windows, macOS, iOS, Android)."
        },
        "version": {
          "type": "string",
          "description": "The operating system version string."
        }
      },
      "additionalProperties": false
    },
    "browser": {
      "type": "object",
      "description": "The browser used to access the application.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The browser name (e.g. Chrome, Firefox, Safari)."
        },
        "version": {
          "type": "string",
          "description": "The browser version string."
        }
      },
      "additionalProperties": false
    },
    "screen": {
      "type": "object",
      "description": "The physical screen dimensions and characteristics.",
      "properties": {
        "width": {
          "type": "integer",
          "description": "The screen width in pixels."
        },
        "height": {
          "type": "integer",
          "description": "The screen height in pixels."
        },
        "density": {
          "type": "number",
          "description": "The device pixel ratio (e.g. 2 for Retina displays)."
        },
        "orientation": {
          "type": "string",
          "enum": ["portrait", "landscape"],
          "description": "The current screen orientation."
        }
      },
      "additionalProperties": false
    },
    "viewport": {
      "type": "object",
      "description": "The browser viewport dimensions.",
      "properties": {
        "width": {
          "type": "integer",
          "description": "The viewport width in pixels."
        },
        "height": {
          "type": "integer",
          "description": "The viewport height in pixels."
        }
      },
      "additionalProperties": false
    },
    "userAgent": {
      "type": "string",
      "description": "The full user agent string from the browser."
    },
    "language": {
      "type": "string",
      "description": "The browser's preferred language setting."
    },
    "cookiesEnabled": {
      "type": "boolean",
      "description": "Whether cookies are enabled in the browser."
    },
    "javaScriptEnabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether JavaScript is enabled in the browser."
    },
    "touchEnabled": {
      "type": "boolean",
      "description": "Whether the device supports touch input."
    },
    "connectionType": {
      "type": "string",
      "description": "The network connection type (e.g. 4g, 3g, wifi, ethernet, slow-2g)."
    }
  },
  "additionalProperties": false
}
