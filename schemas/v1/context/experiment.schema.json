{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opendatalayer.org/schemas/v1/context/experiment.schema.json",
  "title": "Experiment Context",
  "description": "Represents the user's current experiment/feature flag assignments.",
  "type": "object",
  "properties": {
    "experiments": {
      "type": "array",
      "description": "Active experiments the user is enrolled in.",
      "items": {
        "type": "object",
        "properties": {
          "experimentId": {
            "type": "string"
          },
          "experimentName": {
            "type": "string"
          },
          "variantId": {
            "type": "string"
          },
          "variantName": {
            "type": "string"
          },
          "isControl": {
            "type": "boolean"
          }
        }
      }
    },
    "featureFlags": {
      "type": "object",
      "additionalProperties": true,
      "description": "Current feature flag states as key-value pairs."
    }
  },
  "additionalProperties": false
}
